<p id="notice"><%= notice %></p>

<h1>Pool Configurations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <p> Appliance id: <%= @appliance.id %> </p>
      <% if get_appliance_pool_configs(@appliance.id).nil? %>
        <div style="border:2px dashed;background-color: #f4f7fa;margin: 30px 0;padding: 30px;">
          <p>No Pool Configuration Found</p>
        </div>
      <% else %>
        <div style="border:2px dashed;background-color: #f4f7fa;margin: 30px 0;padding: 30px;">
          <p>Pool Configuration Found</p>
        </div>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pool Configuration', new_pool_configuration_path, remote: true %>
