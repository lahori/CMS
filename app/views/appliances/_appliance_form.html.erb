        <div style="display: table-cell;">&nbsp;</div>
        <div style="display: table-cell;"><%= f.text_field(:user_name, size: 60) %></div>      
      </div>
      <div style="display: table-row;">
        <div style="display: table-cell; text-align: right;"><%= f.label("Password", size: 30) %></div>
        <div style="display: table-cell;">&nbsp;</div>
        <div style="display: table-cell;"><%= f.text_field(:password, size: 60) %></div>      
      </div>
      <div style="display: table-row;">
        <div style="display: table-cell; text-align: right;"><%= f.label("URI", size: 30) %></div>
        <div style="display: table-cell;">&nbsp;</div>
        <div style="display: table-cell;"><%= f.text_field(:url, size: 60) %></div>      
      </div>
    </div>
    <div style="display: table; width: 100%">
      <div style="display: table-row;">
      <div style="display: table-cell; width: 55%; text-align: right; font-weight: bold;">
        <div class="actions">
          <%= f.submit %>
        </div>
      </div>
      <!-- <div style="display: table-cell;">&nbsp;</div> -->
      <div style="display: table-cell; text-align: left; font-weight: bold; width: 45%;">
        <%= button_to "Cancel", edit_appliance_path(:id => @appliance.id), :method => :get, remote: true %>
      </div>
