<div id="new_appliance">
  <% if @current_appliance_action == 1 %>
    <h3>Add System Appliance</h3>
  <% elsif @current_appliance_action == 2 %>
    <h3>Update System Appliance</h3>
  <% else %>
    <h3>System Appliance</h3>
  <% end %>

  <%= form_for @appliance, :remote => true do |f| %>
